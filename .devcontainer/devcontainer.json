{
	"name": "Default Linux Universal",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
     // Configure tool-specific properties.
  "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                // GitHub extensions
                "GitHub.vscode-pull-request-github",
                "GitHub.codespaces",
                "GitHub.github-vscode-theme",

                // Java/C++ dependancies
                "ms-vscode.cpptools",
                "redhat.java",
                "vscjava.vscode-java-debug",
                "vscjava.vscode-java-dependency",

                // WPILib Extension
                "wpilibsuite.vscode-wpilib"
            ]
        }
  },
  "postCreateCommand": "wget https://github.com/wpilibsuite/vscode-wpilib/releases/download/v2023.1.1/vscode-wpilib-2023.1.1.vsix && code --install-extension vscode-wpilib-2023.1.1.vsix && rm vscode-wpilib-2023.1.1.vsix"
}
